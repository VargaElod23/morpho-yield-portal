# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# VAPID Keys for Push Notifications (generate with: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Email Service Configuration (Resend.com - get API key from https://resend.com)
RESEND_API_KEY=re_your_resend_api_key_here

# Database Configuration (Choose one)

# Option 1: Supabase (Recommended)
POSTGRES_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# Get this from: Supabase Dashboard → Settings → Database → Connection string → URI

# Option 2: Vercel Postgres (Alternative)
POSTGRES_URL=your_postgres_connection_string_here
POSTGRES_PRISMA_URL=your_postgres_prisma_url_here
POSTGRES_URL_NON_POOLING=your_postgres_non_pooling_url_here

# Optional: Admin secret for database initialization
ADMIN_SECRET=your_admin_secret_here

# Optional: Cron job secret for security
CRON_SECRET=your_cron_secret_here

# Optional: Custom RPC URLs for better performance
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://eth.llamarpc.com
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-rpc.com
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org